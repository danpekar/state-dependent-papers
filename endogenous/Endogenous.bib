	note = {Conference Name: IEEE Transactions on Automatic Control},
	keywords = {Cost function, Heuristic algorithms, Hybrid systems, Nonlinear dynamical systems, optimal control, optimal switching times, optimization algorithms, Power system dynamics, switched systems, Switches, Vehicle dynamics},
	pages = {5407--5414},
	file = {Full Text PDF:files/148/Stellato et al. - 2017 - Second-Order Switching Time Optimization for Switched Dynamical Systems.pdf:application/pdf;IEEE Xplore Abstract Record:files/147/7908990.html:text/html},
